#sidebar
  width 7%
  height 100%
  background-color #29C8E1
  float left
  flexbox(flex)
  flex-direction(column)
  text-align center

  .icon-div
    width 100%
    height 55px
    text-align center

    .icon-img
      width 60%
      opacity .5
      cursor pointer
      position relative

      &.selected
        opacity 1

    .ping
      width 20px
      height 20px
      float right
      position absolute
      margin-left -20px

  .icon-tutorials
    align-self(end)
    margin-top auto
    padding-bottom 10px

  .icon-projects
    padding-top 10px
