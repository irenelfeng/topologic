.progress-bar-item
  height 20px

.project-container
  position relative
  height 800px
  width 400px
  overflow scroll
  
  .project-box
    width 100%
    height 100%
    
    .project
      position relative
      height 800px
      width 400px
      background-color blue
      
      .task-circle
        height 80px
        width 100px
        background-color white
        border 1px solid blue
        position absolute
        border-radius 50px
        flexbox(flex)
        justify-content(center)
        align-items(center)
