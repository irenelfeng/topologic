.form-group
  flexbox(flex)
  flex-direction(row)
  justify-content(space-between)
  padding-bottom 20px
  
  .form-button
    width 40px
    height 20px
    background-color blue
  
  textarea, input
    background-color lighten(grey, 30%)

  .form-aligned-col1
    flex-grow 1
    width 100%
  
  .form-aligned-col2
    flex-grow 2
    width 100%

  .form-title-container
    width 100%
    text-align center

    #form-title
      outline none
      border none
      font-style italic
      color grey
      font-size 1.8em
      width auto
      
    #form-title:focus
      outline none
      border none
