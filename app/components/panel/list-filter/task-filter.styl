#task-filter-container
  padding-top 5px
  width 100%
  flexbox(flex)
  flex-direction(row)
  flex-wrap(nowrap)
  text-align center

  .task-filter-option
    width 100%
    height 30px
    border 1px solid darken(#9FBFE4, 20%)
    cursor pointer

    &.selected
      background-color darken(#9FBFE4, 20%)

#task-filter-important-img
  height 100%
  width auto
