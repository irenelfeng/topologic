#list-container
  flexbox(flex)
  flex-direction(column)
  overflow-x (hidden)
  overflow-y auto

.list-item
  width 100%
  height 70px
  max-height 100px
  flexbox(flex)
  flex-wrap nowrap
  border 1px solid #29C8E1
  cursor pointer

  .icons-container
    width 20%
    flexbox(flex)
    justify-content(center)

    img
      width 40%
      height 40%

  &.selected
    background-color darken(#9FBFE4, 20%)

  &.unread
    border 1px solid darken(#FAAC26, 20%)
    background-color #FAAC26

  .text-container
    width 80%
    padding-top 5px

    .project-title
      font-weight bold

      .task-title
        clear left

    .group-title
      font-weight bold

    .tutorial-name
      font-weight bold

    .notif-link
      font-weight bold

    .notif-description
      clear left

    .group-container
      overflow-x ellipsis
