#list-container
  flexbox(flex)
  flex-direction(column)
  overflow scroll

.list-item
  width 100%
  height 70px
  flexbox(flex)
  border 1px solid #29C8E1
  cursor pointer

  .icons-container
    width 20%
    flexbox(flex)
    justify-content(center)
    
    img
      width 40%
      height 40%
  
  &.selected
    background-color darken(#9FBFE4, 20%)

  .text-container
    width 80%
    padding-top 5px
    
    .project-title
      font-weight bold
      
      .task-title
        clear left
    
    .group-title
      font-weight bold  